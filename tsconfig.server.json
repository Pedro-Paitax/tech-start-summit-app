{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist/server",
    "rootDir": "server",
    "resolveJsonModule": true,
    //"allowImportingTsExtensions": true,
    "noEmit": false

  },
  "include": ["server/**/*"]
}
